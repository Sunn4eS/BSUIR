function Starfield(){this.fps=30,this.canvas=null,this.width=0,this.height=0,this.minVelocity=768<document.documentElement.clientWidth?15:8,this.maxVelocity=768<document.documentElement.clientWidth?30:15,this.stars=768<document.documentElement.clientWidth?100:50,this.intervalId=0}function Star(t,i,e,h){this.x=t,this.y=i,this.size=e,this.velocity=h}Starfield.prototype.initialise=function(t){var i=this;this.containerDiv=t,i.width=document.body.clientWidth,i.height=document.body.clientHeight,window.addEventListener("resize",function(t){i.width=document.body.clientWidth-8,i.height=document.body.clientHeight-8,i.canvas.width=i.width,i.canvas.height=i.height,i.draw()});var e=document.createElement("canvas");t.appendChild(e),this.canvas=e,this.canvas.width=document.body.clientWidth-8,this.canvas.height=document.body.clientHeight-8},Starfield.prototype.start=function(){for(var t,i=[],e=0;e<this.stars;e++)t=768<document.documentElement.clientWidth?3*Math.random()+1:+Math.random()+1,i[e]=new Star(Math.random()*this.width,Math.random()*this.height,t,Math.random()*(this.maxVelocity-this.minVelocity)+this.minVelocity);this.stars=i;var h=this;this.intervalId=setInterval(function(){h.update(),h.draw()},1e3/this.fps)},Starfield.prototype.stop=function(){clearInterval(this.intervalId)},Starfield.prototype.update=function(){for(var t=1/this.fps,i=0;i<this.stars.length;i++){var e=this.stars[i];e.y+=t*e.velocity,e.y>this.height&&(this.stars[i]=new Star(Math.random()*this.width,0,3*Math.random()+1,Math.random()*(this.maxVelocity-this.minVelocity)+this.minVelocity))}},Starfield.prototype.draw=function(){var t=this.canvas.getContext("2d");t.fillStyle=getComputedStyle(document.body).getPropertyValue("background-color"),t.fillRect(0,0,this.width,this.height),t.fillStyle="#ffffff";for(var i=0;i<this.stars.length;i++){var e=this.stars[i];t.beginPath(),t.arc(e.x,e.y,e.size/2,0,2*Math.PI),t.fill()}};